<%- include('partials/header') %>
    <!-- profile section -->
    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-4 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <h1>Restoran Bilgileri</h1>
                    <br>
                    <span class="font-weight-bold">Restoran İsmi: <%=user.restaurant.name%></span>
                    <span class="font-weight-bold">Telefon numarası: 0555 555 55 55</span>
                    <br>
                    <span class="text-black-50">Adres: Mazmegs Mah. Mazmegs Sk. Mazmegs Apt.</span>
                    <span class="text-black-50">Posta Kodu: 34750</span>
                    <span class="text-black-50">İl: İstanbul</span>
                    <span class="text-black-50">İlçe: Ataşehir</span>
                    <span class="text-black-50">E-mail: örnek_email@gmail.com</span>
                    <br>
                    <h2>Menü</h2>
                    <div class="mt-1 text-center"><button class="btn btn-dark profile-button" type="button">Düzenle</button></div>
                </div>
            </div>
            <div class="col-md-8 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Restoran Ayarları</h4>
                    </div>
                    <form action="/saveProfile" method="post">
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Restoran İsmi</label><input type="text" class="form-control" placeholder="<%=user.restaurant.name%>" value=""></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="labels">Telefon numarası</label>
                            <input type="text" name="phone" class="form-control" placeholder="Telefon numarası giriniz" value="">
                        </div>
                        <div class="col-md-12"><label class="labels">Adres</label>
                            <input type="text" name="address" class="form-control" placeholder="Adres giriniz" value="">
                        </div>
                        <div class="col-md-6"><label class="labels">Posta Kodu</label><input type="text" class="form-control" placeholder="Posta kodu giriniz" value=""></div>
                        <div class="col-md-6"><label class="labels">E-mail</label><input type="text" class="form-control" placeholder="E-mail adresi giriniz" value=""></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6"><label class="labels">İl</label><input type="text" class="form-control" placeholder="İl giriniz" value=""></div>
                        <div class="col-md-6"><label class="labels">İlçe</label><input type="text" class="form-control" value="" placeholder="İlçe giriniz"></div>
                    </div>
                    <div class="mt-4 text-center"><button class="btn btn-dark btn-lg profile-button" type="submit">Kaydet</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- end profile section -->
<%- include('partials/footer') %>